<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/countdown_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/suffix_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countdown_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/suffix_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countdown_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/suffix_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countdown_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="2dp"
        android:paddingRight="2dp" />

    <TextView
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:id="@+id/suffix_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>